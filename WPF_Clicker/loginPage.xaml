<Page x:Class="WPF_Clicker.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Clicker"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="330"
      Title="loginPage">

    <Grid>
        <StackPanel Margin="70,130,70,0">
            <TextBox Name="Username" TextAlignment="Center" Padding="5" Margin="0,10,0,0">
                Username
            </TextBox>

            <TextBox Name="Password" TextAlignment="Center" Padding="5" Margin="0,10,0,0">
                Password
            </TextBox>

            <Button Margin="70,30,0,0" Width="100">
                Login
            </Button>
        </StackPanel>

    </Grid>
</Page>
