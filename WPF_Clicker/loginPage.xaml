<Page x:Class="WPF_Clicker.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Clicker"
      mc:Ignorable="d" 
      Height="400" d:DesignWidth="330"
      Title="loginPage">

    <Grid>
        <StackPanel Margin="70,130,70,0">
            <Label Foreground="White">Username:</Label>
            <TextBox x:Name="Username" TextAlignment="Center" Padding="5" Margin="0,0,0,0"
                     KeyDown="Username_KeyDown">
            </TextBox>

            <Label Foreground="White">Password:</Label>
            <TextBox x:Name="Password" TextAlignment="Center" Padding="5" Margin="0,0,0,0"
                     KeyDown="Password_KeyDown">
            </TextBox>

            <Button Margin="70,30,0,0" Width="100" Click="Button_Click">
                Login
            </Button>

            <Label x:Name="ErrorLabel" Margin="0,10,0,0" Foreground="Red">

            </Label>
        </StackPanel>

    </Grid>
</Page>
